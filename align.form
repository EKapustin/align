FILE_TYPE=FORM_DEFN VERSION=2
# skill axlFormTest("align.form")

FORM toolwindow
	FIXED
	PORT 26 40
	HEADER "Align & Distribute"
	
	POPUP <snap_point>"Origin""origin","Body Center""center","Pin #1""pin".
	
	TILE
#--------- Common ---------------------------
		GROUP "Horizontal"
			FLOC 1 0
			FSIZE 25 12
		ENDGROUP
		GROUP "Vertical"
			FLOC 1 11
			FSIZE 25 12
		ENDGROUP
#--------- Align H ----------------------------	
		FIELD align-top
			THUMBNAIL align-top
			OPTIONS stretch
			FLOC 4 2
			FSIZE 3 2
		ENDFIELD
		FIELD bnTop
			FLOC 2 4
			MENUBUTTON "Top" 7 3
		ENDFIELD
		
		FIELD align-centerH
			THUMBNAIL align-centerH
			OPTIONS stretch
			FLOC 12 2
			FSIZE 3 2
		ENDFIELD
		FIELD bnCenterH
			FLOC 10 4
			MENUBUTTON "Center" 7 3
		ENDFIELD
		
		FIELD align-bottom
			THUMBNAIL align-bottom
			OPTIONS stretch
			FLOC 20 2
			FSIZE 3 2
		ENDFIELD
		FIELD bnBottom
			FLOC 18 4
			MENUBUTTON "Bottom" 7 3
		ENDFIELD
#--------- Distribute H -----------------------
		FIELD bxGapH
			FLOC 12 7
			CHECKLIST "Gap"
		ENDFIELD
		FIELD bxStepH
			FLOC 18 7
			CHECKLIST "Step"
		ENDFIELD
		FIELD fStepH
			FLOC 13 9
			REALFILLIN 8 8
			DECIMAL 2
		ENDFIELD
		
		FIELD distributeH
			THUMBNAIL distributeH
			OPTIONS stretch
			FLOC 4 7
			FSIZE 3 2
		ENDFIELD
		FIELD bnDistributeH
			FLOC 2 9
			MENUBUTTON "Distribute" 7 3
		ENDFIELD
#--------- Align V ----------------------------			
		FIELD align-left
			THUMBNAIL align-left
			OPTIONS stretch
			FLOC 4 13
			FSIZE 3 2
		ENDFIELD
		FIELD bnLeft
			FLOC 2 15
			MENUBUTTON "Left" 7 3
		ENDFIELD
		
		FIELD align-centerV
			THUMBNAIL align-centerV
			OPTIONS stretch
			FLOC 12 13
			FSIZE 3 2
		ENDFIELD
		FIELD bnCenterV
			FLOC 10 15
			MENUBUTTON "Center" 7 3
		ENDFIELD
		
		FIELD align-right
			THUMBNAIL align-right
			OPTIONS stretch
			FLOC 20 13
			FSIZE 3 2
		ENDFIELD
		FIELD bnRight
			FLOC 18 15
			MENUBUTTON "Right" 7 3
		ENDFIELD
#--------- Distribute V -----------------------
		FIELD bxGapV
			FLOC 12 18
			CHECKLIST "Gap"
		ENDFIELD
		FIELD bxStepV
			FLOC 18 18
			CHECKLIST "Step"
		ENDFIELD
		FIELD fStepV
			FLOC 13 20
			REALFILLIN 8 8
			DECIMAL 2
		ENDFIELD
		
		FIELD distributeV
			THUMBNAIL distributeV
			OPTIONS stretch
			FLOC 4 18
			FSIZE 3 2
		ENDFIELD
		FIELD bnDistributeV
			FLOC 2 20
			MENUBUTTON "Distribute" 7 3
		ENDFIELD
#--------- Common ---------------------------
		FIELD bxSnapToGrid
			FLOC 2 24
			CHECKLIST "Snap to grid"
		ENDFIELD
		FIELD cmbSnapPoint
			FLOC 13 24
			ENUMSET 10
			POP "snap_point"
		ENDFIELD
		
		FIELD bnDone
			FLOC 2 27
			MENUBUTTON "Done " 7 3
		ENDFIELD
		FIELD bnOops
			FLOC 10 27
			MENUBUTTON "Oops " 7 3
		ENDFIELD
		FIELD bnCancel
			FLOC 18 27
			MENUBUTTON "Cancel" 7 3
		ENDFIELD

	ENDTILE
ENDFORM
 